{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*",
		"examples/**/*",
		"test/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}